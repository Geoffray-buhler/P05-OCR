{% extends "/Base.html.twig" %}

{% block title %}Administration{% endblock %}

{% block head %}
{{ parent() }}
{% endblock %}

{% block content %}
<h1>Administration</h1>
{{ parent() }}
<h2>Gestion des posts</h2>
<a aria-label="Crée un nouvel article" href="/post/create" class="btn-blue">Crée un nouvel article</a>
<h3>Modifiers les articles</h3>
    {% for post in posts %}
        <a aria-label="Modifier un article" href="/post/modify/{{post.id}}" class="btn-warning">{{post.title}}</a>
    {% endfor %}
<h2>Gestion des utilisateurs</h2>
<table>
    <tbody>
        {% for user in users %}
        <tr>
            <td class="d-flex center">
                <p class="mr-1">{{user.login}}</p>
                <p class="mr-1">{{user.email}}</p>
                <form class="button mr-1" action="#" method="POST">
                <input type="hidden" value="{{user.login}}" name="login"></input>
                <input type="hidden" value="{{user.email}}" name="email"></input>   
                <button class="btn-error" type="submit" name="delete">supprimé(e) le compte de {{user.login}}</button>
                </form>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}