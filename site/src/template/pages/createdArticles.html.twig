{% extends "/Base.html.twig" %}
{% block title %}Nouvelle article{% endblock %}
{% block head %}
{{ parent() }}
{% endblock %}
{% block content %}
{% if article %}
<h1>Modification de l'article : {{article.0.title}}</h1>
{% else %}
<h1>Nouvelle article</h1>
{% endif %}
    {{ parent() }}
    <form class="d-flex column" action="#" method="POST" enctype="multipart/form-data">
        <input class="input" type="text" name="title" value="{{article.0.title}}" placholder="Titre">
        <textarea class="mt-1 textarea" type="textarea" name="body" placholder="Article">{{article.0.body}}</textarea>
        <input type="file" name="file" id="file" value="{{article.0.fileName}}" require=false accept="image/png, image/jpeg">
        <input class="mt-1 btnprimary" type="submit" name="submit" value="Poster">
    </form>
{% endblock %}